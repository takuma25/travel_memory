<!DOCTYPE html>

<html>
  <head>
    <title>Travel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <li class="navbar-brand">Travel Memory</li>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <% if user_signed_in? %>
                        <li class="nav-link active"><%= link_to "ホーム", root_path(current_user.id) %></li>
                        <li class="nav-link active"><%= link_to 'マイページ', user_path(current_user.id) %></li>
                        <li class="nav-link active"><%= link_to "新規投稿", new_article_path(current_user.id) %></li>
                        <li class="nav-link active"><%= link_to '設定', edit_user_path(current_user.id) %></li>
                        <li class="nav-link active"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                        <% else %>
                        <li class="nav-link active"><%= link_to "新規登録", new_user_registration_path %></li>
                        <li class="nav-link active"><%= link_to "ログイン", new_user_session_path %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </nav>
        
        <%= yield %>
  </body>
</html>
