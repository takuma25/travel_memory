<h1>新規投稿</h1>

<% if @post_image.errors.any? %>
  <%= @post_image.errors.full_messages.count %> 件のエラーが発生しました
  <% @post_image.errors.full_messages.each do |message| %>
    <%#= message %>
  <% end %>
<% end %>
<%= form_with model: @post_image, local:true do |f| %>
　<h4>タイトル</h4>
  　<%= f.text_field :title %>
　<h4>本文</h4>
  　<%= f.text_area :body %>
　<h4>エリア選択</h4>
  　<%= f.select :category_id, Article.category_ids.keys, {} %>
　<h4>画像添付</h4>
  　<%= f.attachment_field :image %>

　<%= f.submit '投稿' %>
<% end %>
