<div class="users-edit">
  <h2>プロフィール設定</h2>
  <p class="profile-img"><%= attachment_image_tag @user, :image, :fill, 300, 300, fallback: "sample.jpg"%></p>
  <%= form_with model:@user, local:true do |f| %>
    <table class="form-table">
      <tr>
        <th><label for="inputImage">画像変更</label></th>
        <td><%= f.attachment_field :image, placeholder: "プロフィール画像" %></td>
      </tr>
      <tr>
        <th>ニックネーム</th>
        <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></td>
      </tr>
      <tr>
        <th>自己紹介文</th>
        <td><%= f.text_area :self_introduction, autofocus: true, id:"inputName", placeholder:"自己紹介文"%></td>
      </tr>
    </table>
    <div class="submit"><%= f.submit "変更を保存", class: "btn btn-primary" %></div>
  <% end %>
</div>
