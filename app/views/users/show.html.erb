<div class="profile-container">
  
  <p><%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "sample.jpg" %></p>
  <P>ニックネーム：<%= @user.name %></P>
  <p>自己紹介：<%= @user.self_introduction %></p>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<%#= 投稿内容履歴一覧 %>
<% @articles.each do |article| %>
<div>
  <%= link_to article_path(article.id) do %>
    <p>タイトル：<%= article.title %></p>
    <%= attachment_image_tag article, :image %>
  <% end %>
  <p>本文：<%= article.body %></p>
  <p>エリア：<%= article.category_id %></p>
  <p>投稿日：<%= article.created_at.strftime('%Y/%m/%d') %></p>
  <p>👍<%= article.likes.count %> いいね</p>
</div>
<% end %>
<%= paginate @articles %>