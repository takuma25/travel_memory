<h2>プロフィール設定</h2>
<%= form_with model:@user, local:true do |f| %>
  <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "sample.jpg"%>
  <label for="inputImage">画像変更</label>
  <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
  <p>名前</p>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <p>フリガナ</p>
  <%= f.text_field :name_kana, autofocus: true, id:"inputName", placeholder:"フリガナ"%>
  <p>自己紹介文</p>
  <%= f.text_area :self_introduction, autofocus: true, id:"inputName", placeholder:"自己紹介文"%>
  <%= f.submit "変更を保存" %>
<% end %>